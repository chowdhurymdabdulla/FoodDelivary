<main class="d-flex align-items-center min-vh-100 py-3 py-md-0"> 
    <div class="container">
        <div class="card" style="margin-top: 100px">

            <div class="card-header">Update News</div>
            <div class="card-body" style="margin: 10px 20px;">
                <form action="/api/update" method="POST"> 
                    <div class="form-group row">
                        <div class="col-md-12">
                            <label for="title">Title</label>
                            <input type="text" class="form-control" id="title" name="title" value="<%= updateData.title %>" readonly>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-12">
                            <label for="description">Description</label>
                            <input type="text" class="form-control" id="description" name="description" placeholder="<%= updateData.description %>" autofocus>

                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-12">
                            <label for="url">URL</label>
                            <input type="text" class="form-control" id="url" name="url" placeholder="<%= updateData.url %>">

                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-12">
                            <label for="urlImage">URL To Image</label>
                            <input type="text" class="form-control" id="urlImage" name="urlImage" placeholder="<%= updateData.urlImage %>">

                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-12">
                            <label for="date">Published Date</label>
                            
                            <input type="date" class="form-control" id="date" name="date" placeholder="<%= updateData.date + 1%>" required>

                        </div>
                    </div>

                    <a class="update" title="update" data-toggle="tooltip" >
                        <button type="submit" class="btn btn-block login-btn mb-4" >Update</button></a>

                        <input type="reset" value="Reset" class="btn btn-block reset-btn">
                </form>
            </div>
        </div>
    </div>
</main>