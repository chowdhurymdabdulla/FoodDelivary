<main class="d-flex align-items-center min-vh-100 py-3 py-md-0"> 
    <div class="container">
        <div class="card" style="margin-top: 100px">

            <div class="card-header">Add News</div>
            <div class="card-body" style="margin: 10px 20px;">
                <form action="/api/result" method="POST"> 
                    <div class="form-group row">
                        <div class="col-md-12">
                            <label for="title">Title</label>
                            <input type="text" class="form-control" id="title" name="title" placeholder="Insert title" required autofocus>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-12">
                            <label for="description">Description</label>
                            <input type="text" class="form-control" id="description" name="description" placeholder="Insert description" required>

                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-12">
                            <label for="url">URL</label>
                            <input type="text" class="form-control" id="url" name="url" placeholder="Insert URL" required>

                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-12">
                            <label for="urlImage">URL To Image</label>
                            <input type="text" class="form-control" id="urlImage" name="urlImage" placeholder="Insert URL to image" required>

                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-12">
                            <label for="date">Published Date</label>
                            <input type="date" class="form-control" id="date" name="date" placeholder="Insert published date" required>

                        </div>
                    </div>

                    <button type="submit" class="btn btn-block btn-dark mb-4" style="margin-top: 2rem">Add</button>
                    <input type="reset" value="Reset" class="btn btn-block btn-outline-dark">
                    
                </form>
            </div>
        </div>
    </div>
</main>